{
    "applyTo": "site",


    "import": [
        "/modules/ext/scripts/rxt.importer.js",
        "/modules/ext/scripts/form.exporter.js"],

    "fieldPropertyRules": [
        "overview.name:order=1",
        "overview.provider:order=2",
        "overview.description:order=3",
        "overview.version:order=4"
    ],

    "tables": [

        {
            "name": "*"
        }

    ],

    "fieldProperties": [

        {
            "field": "*",
            "name": "order",
            "value": ""
        },
        {
            "field": "*",
            "name": "hidden",
            "value": "false"
        },
        {
            "field": "*",
            "name": "visible",
            "value": "true"
        },
        {
            "field": "overview.*",
            "name": "save",
            "value": "default"
        },
        {
            "field": "*.lifeCycle",
            "name": "save",
            "value": "asset.lifecycle.action.save"
        },
        {
            "field": "overview.provider",
            "name": "readOnly",
            "value": "true"
        }
    ],

    "fields": [
        {
            "name": "lifeCycle",
            "table": "*",
            "label": "Life Cycle",
            "value": "SampleLifeCycle2"

        },
        {
            "name": "banner",
            "table": "images",
            "type": "file"
        },
        {
            "name": "thumbnail",
            "table": "images",
            "type": "file"
        },
        {
            "name":"description",
            "table":"overview",
            "value":"The provider has not given a description."
        }

    ],

    "storage": {

        "images_banner": {

            "lifecycle": {
                "created": ["private_{overview_provider}"],
                "in-review": ["reviewer", "private_{overview_provider}"],
                "published": ["Internal/everyone", "private_{overview_provider}", "reviewer"],
                "unpublished": ["private_{overview_provider}"]
            }
        },

        "images_thumbnail": {

            "lifecycle": {
                "created": ["private_{overview_provider}"],
                "in-review": ["reviewer", "private_{overview_provider}"],
                "published": ["Internal/everyone", "private_{overview_provider}", "reviewer"],
                "unpublished": ["private_{overview_provider}"]
            }
        }

    }
}
