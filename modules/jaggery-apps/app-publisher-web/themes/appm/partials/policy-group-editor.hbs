<!-- Modal -->
<div id="policy-group-editor" class="modal fade" role="dialog" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close mclose-button" data-dismiss="modal"
                        aria-hidden="true">&times;</button>
                <h3>Policy Group Editor</h3>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger alert-dismissible" role="alert" id="policyGroup-notification-text">
                    <button type="button" class="close" data-dismiss="alert"><span
                            aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <span id="policyGroup-notification-text-data"></span>
                </div>

                <div class="form-group">
                    <label id="lblPolicyGroupName">Policy group name:</label>
                    <input id="policyGroupName" type="text" class="form-control"/>
                </div>

                <div class="form-group">
                    <label id="lblThrottlingTier">Throttling Tier:</label>
                    <select id="throttlingTier"></select>
                </div>

                <div class="form-group">
                    <label id="lblAnonymousAccessToUrlPattern">Anonymous Access:</label>
                    <select id="anonymousAccessToUrlPattern">
                        <option value='False' id='False'>False</option>
                        <option value='True' id='True'>True</option>
                    </select>
                    </select>
                </div>

                <div class="form-group">
                    <label id="lblUserRoles">User Roles:</label>
                    <input id="userRoles" type="text" class="form-control"/>
                    <i class="icon-search icon-2 group-role-search"></i>
                </div>

                <div class="form-group">
                    <label>XACML Policies: </label>
                    <table class="table table-striped xacml-policy-group">
                        <thead>
                        <tr>
                            <th style='padding-left:10px; width:80px'>Policy</th>
                            <th style='padding-left:10px; width:50px'>Permit</th>
                            <th style='padding-left:10px; width:50px'>Deny</th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <a id="btn-policy-group-save" class="btn btn-primary">Save</a>
                <a id="btn-policy-group-save-and-close" class="btn btn-primary">Save & Close</a>
                <a class="btn mclose-button" data-dismiss="modal">Close</a>
            </div>
        </div>
    </div>

</div>


