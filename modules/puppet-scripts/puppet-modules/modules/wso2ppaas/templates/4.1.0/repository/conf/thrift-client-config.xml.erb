<!-- Apache thrift client configuration for publishing statistics to WSO2 CEP and WSO2 DAS-->
<thriftClientConfiguration>
    <config>
        <cep>
<%- @cep['nodes'].each do |node| -%>
            <node id="<%= node['id'] %>">
                <statsPublisherEnabled><%= node['stats_publisher_enabled'] %></statsPublisherEnabled>
                <username><%= node['username'] %></username>
                <password><%= node['password'] %></password>
                <ip><%= node['host'] %></ip>
                <port><%= node['ports']['thrift'] %></port>
            </node>
<%- end -%>
        </cep>
        <das>
<%- @das['nodes'].each do |node| -%>
            <node id="<%= node['id'] %>">
                <statsPublisherEnabled><%= node['stats_publisher_enabled'] %></statsPublisherEnabled>
                <username><%= node['username'] %></username>
                <password><%= node['password'] %></password>
                <ip><%= node['host'] %></ip>
                <port><%= node['ports']['thrift'] %></port>
            </node>
<%- end -%>
        </das>
    </config>
</thriftClientConfiguration>
